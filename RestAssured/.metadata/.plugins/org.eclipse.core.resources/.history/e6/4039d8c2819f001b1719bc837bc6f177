package api.automation.utils;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;

import java.util.*;

public class readPropertyFile {
	
	public Properties loadPrperties(String fileName ) throws FileNotFoundException {
		String path = System.getProperty("user.dir") + File.separator + "resources" + File.separator + fileName +".properties";
		File file = new File(path);
		
		FileInputStream fileInput = new FileInputStream(file);
		Properties prop = new Properties();
		prop.load(fileInput)
		
		
	}

}
